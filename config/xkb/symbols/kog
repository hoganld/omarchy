default partial modifier_keys
xkb_symbols "pcmods" {
  key <LWIN> {[ Hyper_L ]};
  key <LALT> {[ Meta_L ]};
};

partial modifier_keys
xkb_symbols "macmods" {
  key <LCTL> {[ Hyper_L ]};
  key <LWIN> {[ Meta_L ]};
};

partial modifier_keys
xkb_symbols "capscontrol" {
  replace key <CAPS> {
    type[Group1] = "ONE_LEVEL",
    symbols[Group1] = [ Control_L ],
    actions[Group1] = [ SetMods(modifiers=Control) ]
  };
};

// This is mostly here to serve as documentation
// for how to implement a working CMD key, while
// staying out of the way for the time being.
partial modifier_keys
xkb_symbols "cmd_on_rctl" {
  key <RCTL> {[ F24 ]};
};

partial alphanumeric_keys
xkb_symbols "wasd" {
  include "kog(pcmods)"
  key <PAUS> {[ Zenkaku_Hankaku ]};
  key <SCLK> {[ Multi_key ]};
};

partial alphanumeric_keys
xkb_symbols "f10compose" {
  key <FK10> {[ Multi_key ]};
};

partial modifier_keys
xkb_symbols "fmods" {
  key <FK13> {[ Meta_L ]};
  key <FK14> {[ Hyper_L ]};
};

partial alphanumeric_keys
xkb_symbols "escape_tilde" {
  key <ESC> { type[Group1]="TWO_LEVEL", [ Escape, asciitilde ]};
};